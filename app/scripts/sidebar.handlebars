<!doctype html>
<div id="avatar">
  <img src="{{avatar_url}}" alt="">
</div>
<div id="user-ids">
  <h1 class="full-name">{{name}}</h1>
  <h3 class="user_handle">{{login}}</h3>
</div>
<div id="user-meta">
  <ul>
    {{#unless hireable}}
        <li class="icon text-trunc" id="work">{{user_work}}</li>
    {{/unless}}
    {{#if url}}
      <li class="icon text-trunc" id="site"><a href="{{blog}}" target="_blank">{{blog}}</a></li>
    {{/if}}
    {{#if location}}
      <li class="icon text-trunc" id="location">{{location}}</li>
    {{/if}}
    {{#if created_at}}
      <li class="icon text-trunc" id="datejoined">Joined on {{pretty_date}}</li>
    {{/if}}
  </ul>
</div>
<div id="user-social">
  <ul>
    <li class="user-social-item"><a href="https://github.com/{{login}}/followers" target="_blank"><span class="user-socnum">{{followers}}</span><div class="user-socname">Followers</div></a></li>
    <li class="user-social-item"><a href="https://github.com/stars" target="_blank"><span class="user-socnum">{{public_gists}}</span><div class="user-socname">Starred</div></a></li>
    <li class="user-social-item"><a href="https://github.com/{{login}}/following" target="_blank"><span class="user-socnum">{{following}}</span><div class="user-socname">Following</div></a></li>
  </ul>
</div>
{{#if organizations}}
<div id="user-orgs">
  <h3 class="orgs-title">Organizations</h3>
  <ul>
    {{#each organizations}}
      <li class="user-org"><a href="https://github.com/{{login}}" target="_blank"><img class="org-img" src="{{avatar_url}}"></a></li>
    {{/each}}
  </ul>
</div>
{{/if}}
